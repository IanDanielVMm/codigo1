body {
    /* Tipo de letra */
    font-family: Arial, sans-serif; /* Se establece el tipo de fuente principal para el cuerpo */

    /* Margen */
    margin: 0; /* Se elimina el margen predeterminado */

    /* Espaciado interno */
    padding: 0; /* Se elimina el espaciado interno predeterminado */

    /* Centrado del texto */
    text-align: center; /* Se centra el texto del cuerpo */

    /* Color de fondo del cuerpo */
    background-color:#223D3C; /* Se establece el color de fondo del cuerpo */
    
    /* Color del texto */
    color:#fff; /* Se establece el color del texto en blanco */
}

/* Estilo para el encabezado */
header {
    /* Tipo de letra */
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Se establece el tipo de fuente para el encabezado */

    /* Color de fondo */
    background-color: #FF66C4; /* Se establece el color de fondo del encabezado */

    /* Color del texto */
    color: #fff; /* Se establece el color del texto en blanco */

    /* Espaciado interno */
    padding: 20px; /* Se añade espaciado interno alrededor del encabezado */
}

/* Estilo para el título dentro del encabezado */
header h1 {
    margin: 0; /* Se elimina el margen superior e inferior del título */
}

/* Estilo para la lista de navegación */
nav ul {
    /* Estilo de la lista */
    list-style-type: none; /* Se elimina el estilo de lista predeterminado */

    /* Espaciado interno */
    padding: 0; /* Se elimina el espaciado interno predeterminado */

    /* Configuración de diseño flexbox */
    display: flex; /* Se utiliza un diseño de caja flexible */
    justify-content: space-between; /* Se distribuyen los elementos de la lista de manera uniforme */
}

/* Estilo para los elementos de la lista de navegación */
nav ul li {
    /* Línea vertical entre elementos */
    border-right: 1px solid #fff; /* Se añade una línea vertical a la derecha de cada elemento */
    
    /* Espaciado a la derecha */
    padding-right: 20px; /* Se añade espacio entre los elementos y la línea vertical */
}

/* Estilo para el último elemento de la lista de navegación */
nav ul li:last-child {
    border-right: none; /* Se elimina la línea vertical del último elemento */
}

/* Estilo para los enlaces dentro de la lista de navegación */
nav ul li a {
    color: #fff; /* Se establece el color del texto en blanco */
    text-decoration: none; /* Se elimina el subrayado de los enlaces */
}

/* Estilo para las secciones */
section {
    padding: 20px; /* Se añade espaciado interno a las secciones */
}

